{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "declaration": true,
    "noImplicitAny": true,
    "outDir": ".",
    "target": "esnext",
    "resolveJsonModule": true,
    "jsx": "react",
    "skipLibCheck": true,
    "types": ["vitest/globals", "node"],
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src/**/*", "test/**/*", "../../test-utils/**/*"],
  "exclude": ["node_modules"]
}
