{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "declaration": true,
    "noImplicitAny": true,
    "outDir": ".",
    "target": "esnext",
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "test/**/*", "test-utils/**/*"],
  "exclude": ["node_modules"]
}
