{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "dev": "bun run scripts/dev.ts",
    "dev:packages": "lerna run dev --scope=@altertable/altertable-* --parallel",
    "dev:examples": "lerna run dev --scope=@altertable/example-* --parallel",
    "clean": "lerna run clean",
    "typecheck": "lerna run typecheck",
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint:fix",
    "test": "lerna run test",
    "test:watch": "lerna run test:watch --parallel",
    "coverage": "lerna run coverage --parallel",
    "bump": "bun run scripts/release/bump-versions.ts",
    "bundlesize": "bundlesize"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@testing-library/dom": "^10.4.1",
    "@types/bun": "^1.3.1",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitest/coverage-v8": "^4.0.5",
    "bundlesize": "^0.18.2",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "jiti": "^2.6.1",
    "jsdom": "^27.0.1",
    "lerna": "^8.2.2",
    "lint-staged": "^15.2.2",
    "prettier": "3.6.2",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.2",
    "tsup": "^8.3.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.5"
  },
  "resolutions": {
    "esbuild": "^0.25.4",
    "brace-expansion": "^2.0.2"
  }
}
